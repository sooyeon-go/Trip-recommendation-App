<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpringActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="286dp"

            android:background="@drawable/spring"></ImageView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textView_spring"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 봄"
                android:fontFamily="@font/theddobak"
                android:textSize="60dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/textView_spring2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 3월 4월 5월"
                android:fontFamily="@font/theddobak"
                android:textSize="30dp"></TextView>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView_spring"
            android:layout_width="215dp"
            android:layout_height="275dp">

            <TextView
                android:id="@+id/tv_springfest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DB Select 결과"

                ></TextView>

            <TextView
                android:id="@+id/tv_springfest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title Result"

                ></TextView>

            <TextView
                android:id="@+id/tv_springfest_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content Result"

                ></TextView>


        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>