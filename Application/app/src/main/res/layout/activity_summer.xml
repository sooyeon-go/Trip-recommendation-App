<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummerActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="286dp"

            android:background="@drawable/summer"></ImageView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textView_summer"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 여름"
                android:fontFamily="@font/theddobak"
                android:textSize="60dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/textView_summer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 6월 7월 8월"
                android:fontFamily="@font/theddobak"
                android:textSize="30dp"></TextView>
        </LinearLayout>

        <ScrollView
            android:id = "@+id/scrollView_summer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>