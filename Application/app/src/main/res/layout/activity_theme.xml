<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_theme">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/theme_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/theme_title">
        </ImageView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/theme_title">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_season"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:background="@drawable/click_selector"
                    android:layout_marginTop="100dp"
                    app:srcCompat="@drawable/palm_tree" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:fontFamily="@font/theddobak"
                    android:text="계절별 지역 축제"
                    android:textSize="20dp"/>

                <ImageButton
                    android:id="@+id/btn_studoi_set"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="130dp"
                    android:background="@drawable/click_selector"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cinema" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:fontFamily="@font/theddobak"
                    android:text="드라마/영화 촬영 명소"
                    android:textSize="20dp"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>